<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="urn:opendaylight:flow:inventory">
  <strict>false</strict>
  <instructions>
    <instruction>
      <order>0</order>
      <apply-actions>
        <action>
          <set-nw-src-action>
            <ipv4-address>{{ victim_ipv4_address }}/32</ipv4-address>
          </set-nw-src-action>
          <order>0</order>
        </action>
        <action>
          <set-dl-src-action>
            <address>{{victim_mac_address }}</address>
          </set-dl-src-action>
          <order>1</order>
        </action>
        <action>
            <order>2</order>
            <nx-resubmit xmlns="urn:opendaylight:openflowplugin:extension:nicira:action">
                <table>51</table>
            </nx-resubmit>
        </action>
      </apply-actions>
    </instruction>
  </instructions>
  <table_id>51</table_id>
  <id>{{flow_id}}_reverse_link</id>
  <match>
    <ethernet-match>
        <ethernet-type>
            <type>2048</type>
        </ethernet-type>
    </ethernet-match>
    <ipv4-source>{{ honeypot_ipv4_address }}/32</ipv4-source>
    <ipv4-destination>{{ attacker_ipv4_address }}/32</ipv4-destination>
  </match>
  <flow-name>{{flow_name}}_reverse_link</flow-name>
  <installHw>true</installHw>
  <priority>30</priority>
</flow>
